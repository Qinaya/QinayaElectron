{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "co.qinaya.cloudpro",
  "asar": true,
  "productName": "QinayaCloudPro",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "mac": {
   "icon": "./build/icon.icns"

    "target": [
      "dmg"
    ],
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "Qinaya",
        "repo": "QinayaElectron",
        "releaseType": "release"
      }
    ]
  },
  "win": {
    "icon": "./public/qinaya.png",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "Qinaya",
        "repo": "QinayaElectron",
        "releaseType": "release"
      }
    ]
  },
  "linux": {
    "icon": "./public/qinaya.png",
    "category": "Internet",
    "target": [
      "AppImage",
      "deb",
      "tar.gz",
      {
        "target": "snap"
      }
    ],
    "artifactName": "${productName}-Linux-${version}-${arch}.${ext}",
    "publish": [
      // This will apply to all Linux formats for GitHub publishing
      {
        "provider": "github",
        "owner": "Qinaya",
        "repo": "QinayaElectron",
        "releaseType": "release"
      },
      // Snap specific publish configuration for Snap Store
      {
        "provider": "snapStore",
        "repo": "QinayaCloudPro",  
        "channels": ["stable"],
        "publishAutoUpdate": true,
        "timeout": 120000
      }
    ]
  }
}


     

{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "co.qinaya.cloudpro",
  "asar": true,
  "productName": "QinayaCloudPro",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "mac": {
    "target": [
      "dmg"
    ],
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "Qinaya",
        "repo": "QinayaElectron",
        "releaseType": "release"
      }
    ]
  },
  "win": {
    "icon": "./public/qinaya.png",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "Qinaya",
        "repo": "QinayaElectron",
        "releaseType": "release"
      }
    ]
  },
  "linux": {
    "icon": "./public/qinaya.png", 
    "category": "Internet",
    "target": [
      "AppImage",
      "deb",
      "tar.gz",
      {
        "target": "snap",
        // Specify any snap-specific configuration here as needed
      }
    ],
    "artifactName": "${productName}-Linux-${version}.${ext}",
    "publish": [
      // This will apply to all Linux formats except for those specified otherwise
      {
        "provider": "github",
        "owner": "Qinaya",
        "repo": "QinayaElectron",
        "releaseType": "release"
      },
      // Snap specific publish configuration
      {
       "provider": "snapStore",
      "repo": "QinayaCloudPro",	
      "channels": ["stable"], // Can be a string or array of strings
      "publishAutoUpdate": true,
      "timeout": 120000, // Request timeout in milliseconds
      }
    ]
  },
  // Global publish settings are omitted to avoid conflicts
}




     
